<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">

        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView_Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAppearance">@style/AppTheme.TextView</item>
    </style>

    <style name="AppTheme.TextView_Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAppearance">@style/AppTheme.TextView</item>
    </style>


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Dark.Progress" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light.Progress" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>
